    "is-date-object": "^1.1.0",
    "is-regex": "^1.2.1",
    "jsonfile": "^6.1.0",
    "minimist": "^1.2.8",
    "mkdirp": "^3.0.1",
    "object-is": "^1.1.6",
    "object-keys": "^1.1.1",
    "regexp.prototype.flags": "^1.5.3"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@ionic/v1-toolkit": "^3.2.20",
